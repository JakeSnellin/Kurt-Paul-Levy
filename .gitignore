#----------------------------------------
# This Git ignore should be located
# in your WordPress install's wp-content/
# directory.
#----------------------------------------

#---------------------------
# WordPress general
#---------------------------
/index.php

#---------------------------
# WordPress themes
#---------------------------
/themes/*

# DO NOT ignore these themes...
!/themes/kurtpaullevy-understrap-child

# Ignore All-in-One WP Migration backups
/ai1wm-backups/
*.wpress

# Ignore wpvivid backups and staging files
/wpvivid_staging/
/wpvividbackups/

#---------------------------
# WordPress plugins
#---------------------------
/plugins/*

#---------------------------
# WP MU plugins: often
# managed by the platform.
#---------------------------
/mu-plugins/

#---------------------------
# WP uploads directory
#---------------------------
/uploads/

#---------------------------
# WP upgrade files
#---------------------------
/upgrade/

#---------------------------
# OS-specific files
#---------------------------
.DS_Store
.Trashes
Thumbs.db

#---------------------------
# Composer
#---------------------------
/vendor
.env
.env.*
!.env.example

